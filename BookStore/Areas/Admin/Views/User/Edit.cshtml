@model BookStore.ViewModels.UserVM

@{
    var title = "Raise User";
}

<form method="post">
    <div class="col-8 row p-3 border">
        
        <div asp-validation-summary="ModelOnly " class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-dark">@title</h2>
        </div>
        <div class="col-12 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label >UserName</label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label>Current Role</label>
                </div>
                <div class="col-8">
                    <input asp-for="Role" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ApplicationRoleId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.ApplicationRoleId, Model.RoleList, "Select a role",
                new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CompanyId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.CompanyId, Model.CompanyList, "Select a Company",
                new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row col-8 offset-4">
                <a asp-action="Index" class="btn btn-outline-primary form-control col-6">Back to list</a>
                <button type="submit" class="btn btn-success form-control col-6">Edit</button>
            </div>
        </div>
    </div>
</form>

